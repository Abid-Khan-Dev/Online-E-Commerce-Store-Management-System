<%- include ../partials/header %> 
<%- include ../partials/categories-navbar%>

<!-- Top Carousel -->
<div id="topCarousel" class="carousel slide mb-3 mt-0 pt-0" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#topCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#topCarousel" data-slide-to="1"></li>
    <li data-target="#topCarousel" data-slide-to="2"></li>
  </ol>

  <!-- Carousel Inner -->
  <div class="carousel-inner" style="max-height: 300px; overflow: hidden;">
    <div class="carousel-item active">
      <img class="d-block w-100" src="/images/slide1.jpg" alt="First slide" style="object-fit: cover; height: 300px;" />
      <div class="carousel-caption d-none d-md-block">
        <h5>First Slide Heading</h5>
        <p>Short description for the first slide.</p>
      </div>
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="/images/slide2.jpg" alt="Second slide" style="object-fit: cover; height: 300px;" />
      <div class="carousel-caption d-none d-md-block">
        <h5>Second Slide Heading</h5>
        <p>Short description for the second slide.</p>
      </div>
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="/images/slide3.jpg" alt="Third slide" style="object-fit: cover; height: 300px;" />
      <div class="carousel-caption d-none d-md-block">
        <h5>Third Slide Heading</h5>
        <p>Short description for the third slide.</p>
      </div>
    </div>
  </div>

  <!-- Controls -->
  <a class="carousel-control-prev" href="#topCarousel" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon bg-dark rounded-circle p-2" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#topCarousel" role="button" data-slide="next">
    <span class="carousel-control-next-icon bg-dark rounded-circle p-2" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<!-- Store's Categories Section -->
<div class="container mb-4 mt-4">
  <h3 class="text-center mb-4 font-weight-bold">Store's Categories</h3>
  <% if (categories) { %>
  <div class="row justify-content-center">
    <% for(let i = 0; i < 3; i++) { %>
    <div class="col-lg-3 col-md-4 col-sm-6 text-center mb-4">
      <a class="category-link d-block text-decoration-none" href="/products/<%= categories[i].slug %>">
        <div class="category-container d-inline-block">
          <img src="images/dept<%= i %>.jpg" alt="<%= categories[i].title %>" class="img-fluid rounded-circle" style="width: 100px; height: 100px; object-fit: cover;" />
          <h4 class="mt-2 font-weight-bold"><%= categories[i].title %></h4>
        </div>
      </a>
    </div>
    <% } %>
    <div class="col-lg-1 col-md-1 d-flex align-items-center justify-content-center">
      <a href="/products" class="btn  p-2 icon-button">
        <i class="fa fa-chevron-right" aria-hidden="true" style="font-size: 18px;"></i>
      </a>
    </div>
  </div>
  <% } %>
</div>




<!-- Latest products slider -->
<div class="container mb-4 mt-4">
  <!--Carousel Wrapper-->
  <div id="products-carousel" class="carousel slide carousel-multi-item" data-ride="carousel">
    <!--Controls-->
    <div class="controls-top mb-2">
      <div class="row">
        <div class="col-8">
          <h3>Latest Products</h3>
        </div>
        <div class="col-4">
          <div class="controls float-right hidden-xs">
            <a class="left fa fa-chevron-left btn btn" href="#products-carousel" data-slide="prev"></a>
            <a class="right fa fa-chevron-right btn btn" href="#products-carousel" data-slide="next"></a>
          </div>
        </div>
      </div>
    </div>
    <!--/.Controls-->

    <!--Slides-->
    <div class="carousel-inner" role="listbox">
      
      <!-- First slide -->
<div class="carousel-item active">
  <div class="row">
    <% for(let i = 0; i < 3; i++) { %>
      <% if (products[i] && products[i].category) { %>
        <div class="col-md-4 product-index-box mb-4">
          <div class="single-product d-flex flex-column h-100 text-center border p-3">
            <a class="title-link d-block" href="/products/<%=products[i].category.slug%>/<%=products[i]._id%>">
              <div class="image-wrapper mb-3">
                <img src="<%= products[i].imagePath %>" alt="Product Image" class="img-fluid mx-auto" style="max-height: 200px; object-fit: contain;" />
              </div>
            </a>
            <div class="product-info">
              <a class="title-link d-block" href="/products/<%=products[i].category.slug%>/<%=products[i]._id%>">
                <h6 class="mt-2 mb-2"><%= products[i].title %></h6>
              </a>
              <div class="price font-weight-bold text-success">Rs <%= products[i].price %></div>
            </div>
            <% if(products[i].available) { %>
              <a href="/add-to-cart/<%=products[i]._id%>" class="btn btn-block btn-secondary button-style mt-3">
                Add to Shopping Cart
              </a>
            <% } else { %>
              <a href="#" class="btn btn-block btn-danger button-style-danger mt-3">
                Sold out
              </a>
            <% } %>
          </div>
        </div>
      <% } %>
    <% } %>
  </div>
</div>
<!-- /.First slide -->

